<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CD2990" >

    <Button
        android:id="@+id/button1"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_x="84dp"
        android:layout_y="378dp"
        android:text="Check"
        android:textColor="#780404" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_x="16dp"
        android:layout_y="44dp"
        android:text="Your Name"
        android:textColor="#780404"
        android:textSize="35px" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="107dp"
        android:layout_height="107dp"
        android:layout_x="106dp"
        android:layout_y="150dp"
        android:src="@drawable/love_icon" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_x="17dp"
        android:layout_y="272dp"
        android:text="Your Partner&apos;s Name"
        android:textColor="#780404"
        android:textSize="35px" />

    <EditText
        android:id="@+id/name1"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_x="11dp"
        android:layout_y="88dp"
        android:background="#ffffff"
        android:ems="10"
        android:maxLines="1"
        android:textColor="#780404"
        android:textSize="25px" />

    <EditText
        android:id="@+id/name2"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginBottom="40dp"
        android:layout_x="11dp"
        android:layout_y="314dp"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="text"
        android:maxLines="1"
        android:textColor="#780404"
        android:textSize="25px" />

</AbsoluteLayout>
